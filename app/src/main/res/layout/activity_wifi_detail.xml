<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="networkDetail"
            type="cn.leither.btsp.entity.NetworkDetail" />
    </data>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/choose_wifi_title"
            android:text="网络状态"
            android:textSize="20sp"
            android:background="@drawable/cut_off_rule"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            tools:ignore="UselessParent">
            <LinearLayout
                android:background="@drawable/cut_off_rule"
                android:layout_weight="30"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/wifiok" />
                <TextView
                    android:gravity="center"
                    android:text="连接正常"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_height="0dp">
                <LinearLayout
                    android:background="@drawable/cut_off_rule"
                    android:layout_weight="20"
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="WIFI"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:gravity="right"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:paddingEnd="10dp"
                        android:text="@{networkDetail.connection, default = 正在获取}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/cut_off_rule"
                    android:layout_weight="20"
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="IP地址"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:gravity="right"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:paddingEnd="10dp"
                        android:text="@{networkDetail.v4Address, default= 正在获取}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/cut_off_rule"
                    android:layout_weight="20"
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="MAC地址"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:gravity="right"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:paddingEnd="10dp"
                        android:text="@{networkDetail.hdAddress, default = 正在获取}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/cut_off_rule"
                    android:layout_weight="20"
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="网关IP"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:gravity="right"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:paddingEnd="10dp"
                        android:text="@{networkDetail.v4Gateway, default=正在获取}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/cut_off_rule"
                    android:layout_weight="20"
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="网卡"
                        android:textSize="17sp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:gravity="right"
                        android:layout_weight="50"
                        android:paddingEnd="10dp"
                        android:textSize="17sp"
                        android:text="@{networkDetail.iFace, default=正在获取}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/cut_off_rule"
                android:layout_width="match_parent"
                android:layout_weight="20"
                android:weightSum="100"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:weightSum="100"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/disconnInDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="95"
                        android:background="@drawable/disconnect_btn"
                        android:gravity="center"
                        android:text="断开接连"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:weightSum="100"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/forgetInDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="96"
                        android:background="@drawable/radius_color1_button"
                        android:gravity="center"
                        android:text="忘记网络"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
